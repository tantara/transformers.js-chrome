{
  "name": "transformersjs-chrome",
  "displayName": "Private AI Assistant: Running LLM locally",
  "version": "0.0.1",
  "description": "Private AI Assistant enables users to interact with language models directly in their browser without an internet connection.",
  "author": "Taekmin Kim <tantara.tm@gmail.com>",
  "scripts": {
    "dev": "pnpm with-env plasmo dev",
    "build": "pnpm with-env plasmo build",
    "package": "pnpm with-env plasmo package",
    "with-env": "dotenv -e .env --",
    "postinstall": "bash postinstall/run.sh"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.2.4",
    "@plasmohq/storage": "^1.13.0",
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-context-menu": "^2.2.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-radio-group": "^1.2.2",
    "@radix-ui/react-scroll-area": "^1.2.1",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.4",
    "better-react-mathjax": "2.0.4-beta1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.2",
    "lucide-react": "^0.462.0",
    "marked": "^15.0.3",
    "plasmo": "0.89.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-dropzone": "^14.3.5",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^7.4.2",
    "postcss": "^8.4.49",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.15",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "contextMenus",
      "scripting",
      "sidePanel",
      "storage",
      "unlimitedStorage"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
    }
  },
  "@parcel/resolver-default": {
    "packageExports": true
  }
}
